<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    tools:context=".view.fragments.HomeFragment"
    tools:visibility="visible"
    style="@style/Theme.MovieSearch.Background">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/film_item_card_view_elevation"
                app:layout_scrollFlags="scroll|enterAlways"
                app:cardBackgroundColor="@android:color/transparent">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/fragment_home_search"
                    style="@style/Theme.MovieSearch.Search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fragment_home_search_view_margin"
                    android:imeOptions="actionSearch"
                    app:iconifiedByDefault="false" />

            </androidx.cardview.widget.CardView>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/fragment_home_recyclerview_margin_start"
            android:layout_marginTop="@dimen/fragment_home_recyclerview_margin_top"
            android:layout_marginEnd="@dimen/fragment_home_recyclerview_margin_end"
            android:layout_marginBottom="@dimen/fragment_home_recyclerview_margin_bottom"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            tools:listitem="@layout/film_item" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>