<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/fragment_details_app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_details_app_bar_layout_height"
        android:fitsSystemWindows="false">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/activity_details_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="@dimen/fragment_details_collapsing_toolbar_layout_minheight"
            android:theme="@style/Theme.MovieSearch.ContentScrim"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="1000"
            app:toolbarId="@+id/activity_details_toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/activity_details_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:theme="@style/Theme.MovieSearch.Background"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_details_fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_details_fab_margin"
        android:layout_marginEnd="@dimen/fragment_details_fab_margin"
        android:background="@color/white"
        android:backgroundTint="@color/grey_almost_white"
        android:contentDescription="@string/description_fab"
        app:layout_anchor="@id/fragment_details_app_bar"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_fragment_details_share" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_details_fab_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_details_fab_margin"
        android:layout_marginTop="@dimen/fragment_details_fab_margin"
        android:background="@color/white"
        android:backgroundTint="@color/grey_almost_white"
        android:contentDescription="@string/description_fab"
        app:layout_anchor="@id/fragment_details_app_bar"
        app:layout_anchorGravity="bottom|start"
        app:srcCompat="@drawable/ic_fragment_details_favorite_no" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <TextView
            android:id="@+id/activity_details_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fragment_details_text_view_margin"
            android:textSize="@dimen/preview_text_size"
            android:theme="@style/Theme.MovieSearch.Text"
            tools:text="@tools:sample/lorem/random" />
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>