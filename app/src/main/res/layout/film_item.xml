<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/film_item_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/film_item_card_view_height"
    android:elevation="@dimen/film_item_card_view_elevation"
    app:cardCornerRadius="@dimen/film_item_card_view_cornerradius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.MovieSearch.FilmItem">

        <ImageView
            android:id="@+id/film_item_poster"
            android:layout_width="@dimen/film_item_view_width"
            android:layout_height="@dimen/film_item_view_height"
            android:layout_margin="@dimen/film_item_view_margin"
            android:contentDescription="@string/film_item_poster_description"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/film_item_title"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/film_item_text_view_padding"
            android:textAlignment="center"
            android:textSize="@dimen/preview_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/film_item_poster"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Theme.MovieSearch.Text"/>

        <TextView
            android:id="@+id/film_item_description"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="7"
            android:padding="@dimen/film_item_text_view_padding"
            android:textSize="@dimen/description_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/film_item_poster"
            app:layout_constraintTop_toBottomOf="@id/film_item_title"
            style="@style/Theme.MovieSearch.Text"/>

        <com.example.moviesearch.customView.RatingDonutView
            android:id="@+id/film_item_rating"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:translationZ="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:stroke="8"
            app:rating="100"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>