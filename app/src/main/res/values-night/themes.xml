<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieSearch" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/grey_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/grey_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.MovieSearch.BottomBar" parent="ThemeOverlay.MaterialComponents">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Theme.MovieSearch.Background" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@drawable/shape_background_dark</item>
    </style>

    <style name="Theme.MovieSearch.ContentScrim" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="contentScrim">@color/grey</item>
        <item name="collapsedTitleTextColor">@color/grey_almost_white</item>
        <item name="expandedTitleTextColor">@color/grey_almost_white</item>
    </style>

    <style name="Theme.MovieSearch.Text" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/grey_almost_white</item>
    </style>

    <style name="Theme.MovieSearch.DialogAlert" parent="Theme.MovieSearch">
        <item name="android:textColor">@color/grey_almost_white</item>
        <item name="android:background">@color/grey_dark</item>
        <item name="colorPrimary">@color/grey_almost_white</item>
    </style>

    <style name="Theme.MovieSearch.Search" parent="Theme.MovieSearch">
        <item name="android:background">@drawable/shape_fragment_home_search_background_night</item>
    </style>

    <style name="Theme.MovieSearch.FilmItem" parent="Theme.MovieSearch">
        <item name="android:background">@drawable/shape_film_item_background_night</item>
    </style>
</resources>